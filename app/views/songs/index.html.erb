
<div ng-controller="SongSearchController as SSC">
  <form>
    <input type="text" ng-model="searchTerm" name="searchstring">
    <button ng-click="doSearch()">Search</button>
  </form>
  <ul ng-repeat="song in songs">
    <li>
      <a ng-href="#/track/{{song.id}}" ng-click="clearList()">{{song.title}}</a>
    </li>
  </ul>
</div>

<div>
    <ui-view></ui-view>
</div>
