<div ng-controller="SongSearchController">
  <div class="backgroundimageStyling">
    <div class="layer"></div>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" id="navbarTitle" href="/#/">Selecta</a>
        </div>
        <form class="navbar-form navbar-left">
          <div class="form-group">
            <input type="text" ng-model="searchTerm" name="searchstring" class="form-control" placeholder="Start discovering...">
          </div>
          <a ng-href="#/results"><button ng-click="doSearch()" type="submit" class="btn btn-default" id="Search">Search</button></a>
        </form>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li><a id="likeHistory" ng-href=<%="#/likeHistory/#{current_user.id}"%>>Like History</a></li>
              <li><%= link_to "Log out", log_out_path %></li>
            <% else %>
              <li><%= link_to "Sign up", sign_up_path %></li>
              <li><%= link_to "Log in", log_in_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <ui-view></ui-view>
        </div>
      </div>
    <div class="container-fluid">
      <div class="list-group">
        <ol ng-repeat="song in songs">
          <li class="list-group-item">
            <a ng-href="#/track/{{song.id}}" ng-click="clearList()">{{song.title}}</a>
          </li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="navbar navbar-inverse navbar-fixed-bottom">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" id="navbarTitle" href="/#/"></a>
    </div>
    <div ng-controller="TrackController">
      <ul class="nav navbar-nav playpausenextbuttons">
        <button class="btn btn-default" ng-click="currentSong()" id='currentSong'><span class="glyphicon glyphicon-music"></span></button>
        <button class="btn btn-default" ng-click="play()" id='Play'><span class="glyphicon glyphicon-play" aria-hidden="true"></span></button>
        <button class="btn btn-default" ng-click="stop()" id='Pause'><span class="glyphicon glyphicon-pause" aria-hidden="true"></span></button>
        <button class="btn btn-default" ng-click="next()" id='Next'><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></button>
      </ul>
    </div>
  </div>
</div>
