<div ng-controller="SongSearchController">
  <div class="backgroundimageStyling">
    <div class="layer"></div>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/#/">Selecta</a>
        </div>
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" ng-model="searchTerm" name="searchstring" class="form-control searchbar" placeholder="Start discovering...">
          </div>
          <a ng-href="#/results"><button ng-click="doSearch()" type="submit" class="btn btn-default">Search</button></a>
        </form>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav pull-right">
            <% if logged_in? %>
              <li><a ng-href=<%="#/likeHistory/#{current_user.id}"%>>Like History</a></li>
              <li><%= link_to "Log out", log_out_path %></li>
            <% else %>
              <li><%= link_to "Sign up", sign_up_path %></li>
              <li><%= link_to "Log in", log_in_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <ui-view></ui-view>
        </div>
      </div>
    <div class="container-fluid">
      <div class="list-group">
        <ul ng-repeat="song in songs">
          <li class="list-group-item">
            <a ng-href="#/track/{{song.id}}" ng-click="clearList()">{{song.title}}</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
