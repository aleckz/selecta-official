<h1>Selecta Sign up</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
  <div class="errors">
    <h2>Invalid Sign-up Credentials</h2>
    <ul>
      <% for message in @user.errors.full_messages %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<p class="email">
  <%= f.label :email %><br>
  <%= f.text_field :email %>
</p>
<p class="password">
  <%= f.label :password %><br>
  <%= f.password_field :password %>
</p>
<p class="password_confirmation">
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %>
</p>

<p class="button"><%= f.submit "Sign Up"%></p>
<% end %>
